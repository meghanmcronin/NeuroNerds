<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.app.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:focusable="false"
    android:orientation="vertical">
    <!--
    android:background="@drawable/menu_item_background_selector"
    android:textColor="@drawable/menu_item_text_selector"
    android:textColor="#1E90FF" -->
    <TextView
        android:layout_columnWeight="1"
        android:textColor="#364AB8"
        android:id="@+id/patientList"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="20sp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@+id/patients"
        android:focusable="false"
        android:clickable="false"
        android:background="@drawable/list_item_selector"
        android:focusableInTouchMode="false"
        android:descendantFocusability="blocksDescendants"/>
